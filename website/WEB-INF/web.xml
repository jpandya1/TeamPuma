<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <servlet>
    <servlet-name>ofysign</servlet-name>
    <servlet-class>guestbook.OfySignGuestbookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ofysign</servlet-name>
    <url-pattern>/ofysign</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>carbsign</servlet-name>
    <servlet-class>guestbook.CarbonServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>carbsign</servlet-name>
    <url-pattern>/carbsign</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>ObjectifyFilter</filter-name>
    <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ObjectifyFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>